{
  "manifest_version": 3,
  "name": "Homura - AI Browser Automation",
  "version": "0.1.0",
  "description": "Next-gen declarative AI browser automation agent",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.tsx"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "action": {
    "default_title": "Open Homura"
  },
  "chrome_url_overrides": {},
  "options_page": "src/dashboard/index.html"
}
